#!/usr/bin/env ruby

require 'pathname'
require 'rubygems'

file_path = Pathname.new(__FILE__).realpath
libdir = File.join(File.dirname(File.dirname(file_path)), "lib")
$LOAD_PATH.unshift(libdir) unless $LOAD_PATH.include?(libdir)

require 'marv'

banner = <<-TEXT

  ::::    ::::      :::     :::::::::  :::     :::
  +:+:+: :+:+:+   :+: :+:   :+:    :+: :+:     :+:
  +:+ +:+:+ +:+  +:+   +:+  +:+    +:+ +:+     +:+
  +#+  +:+  +#+ +#++:++#++: +#++:++#:  +#+     +:+
  +#+       +#+ +#+     +#+ +#+    +#+  +#+   +#+
  #+#       #+# #+#     #+# #+#    #+#   #+#+#+#
  ###       ### ###     ### ###    ###     ###

TEXT

at_exit do
  Marv.exit_message
end

puts(banner)

Marv::CLI::Commands.start
